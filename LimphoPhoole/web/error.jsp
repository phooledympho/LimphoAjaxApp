  color: white; 
  padding: 10px; 
  text-align: center; 
}

td {
  padding: 10px; 
  text-align: left; 
  border-bottom: 1px solid #aaccee;
}

a {
  color: #336699; 
  text-decoration: none; 
}

a:hover {
  text-decoration: underline;
}

.container {
  text-align: center; 
  width: 50%; 
  margin: 0 auto; 
  background-color: #f9f9f9;
  border-radius: 10px; 
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  padding: 10px;
}

input[type="text"] {
  width: 80%; 
  padding: 6px; 
  border-radius: 6px; 
  border: 1px solid #2c7d59; 
  background-color: #e0f7e0;
  color: #333; 
}
table.popupBox {
  position: absolute; 
  width: 65%; 
  background-color: #cce7ff; 
  border: 1px solid #336699; 
  border-radius: 5px; 
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1); 
  display: none; 
}

table.popupBox.visible {
  display: block; 
}

.popupCell {
  background-color: white; 
}

.popupCell:hover {
  background-color: #cce7ff; 
}

.popupItem {
  color: #333; 
  text-decoration: none; 
  font-size: 1.1em;
}
