body {
  font-family: "Roboto", Arial, sans-serif; 
  font-size: medium; 
  padding: 30px; 
  color: #333; 
  background-color: #e6f2ff; 
  text-align: center; 
}

h1 {
  font-size: 1.6em; 
  color: #004080; 
  font-weight: bold; 
  margin-bottom: 20px; 
}

h2 {
  font-size: 1.4em; 
  color: #004080; 
  font-weight: normal; 
  text-align: left; 
  margin-bottom: 15px; 
}

p {
  font-size: 14px; 
  color: #444; 
  max-width: 500px; 
  text-align: center; 
  padding: 5px; 
  margin: 0 auto; 
  margin-top: 10px; 
}

table {
  width: 70%; 
  background-color: #cce7ff;
  border-collapse: collapse; 
  border-radius: 10px; 
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1); 
  margin: 0 auto; 
}

